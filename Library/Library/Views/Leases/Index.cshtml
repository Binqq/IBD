@model IEnumerable<Library.Models.Data.Lease>

@{
    ViewData["Title"] = "Index";
}

<h2>Wypożyczenia</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Login)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LeaseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LeaseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LeaseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
